@model HR.MVC.DHK.Models.Department

@{
    ViewData["Title"] = "Edit Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Edit Department</h2>

    @using (Html.BeginForm("EditDepartment", "Department", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.HiddenFor(model => model.DeptId) <!-- Add hidden field for DeptId -->
            <label for="DeptName">Department Name:</label>
            @Html.TextBoxFor(model => model.DeptName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DeptName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="ComId">Company:</label>
            @Html.DropDownListFor(model => model.ComId, new SelectList(ViewBag.Companies, "ComId", "ComName"), "Select Company", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ComId, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Department")" class="btn btn-secondary">Cancel</a>
    }
</div>
