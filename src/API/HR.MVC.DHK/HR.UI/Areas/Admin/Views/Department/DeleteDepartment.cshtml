@model HR.MVC.DHK.Models.Department

@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Delete Department</h2>

    <h4>Are you sure you want to delete this department?</h4>
    <div>
        <h5>Department Name:</h5>

        <p>@Model.DeptName</p>
    </div>

    @using (Html.BeginForm("Delete", "Department", new { id = Model.DeptId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DeptId)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Department")" class="btn btn-secondary">Cancel</a>
    }
</div>
