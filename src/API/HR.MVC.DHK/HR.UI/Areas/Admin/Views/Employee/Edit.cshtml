@model HR.MVC.DHK.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <h1>Create</h1>

    <h4>Employee</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EmpId" />

                <div class="form-group">
                    <label asp-for="EmpCode" class="control-label"></label>
                    <input asp-for="EmpCode" class="form-control" />
                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmpName" class="control-label"></label>
                    <input asp-for="EmpName" class="form-control" />
                    <span asp-validation-for="EmpName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="dtJoin" class="control-label"></label>
                    <input asp-for="dtJoin" type="date" class="form-control" />
                    <span asp-validation-for="dtJoin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gross" class="control-label"></label>
                    <input asp-for="Gross" class="form-control" />
                    <span asp-validation-for="Gross" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ComId" class="control-label"></label>

                    @Html.DropDownListFor(model => model.ComId, new SelectList(ViewBag.Companies, "ComId", "ComName"), "Select Company", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ComId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="DeptId" class="control-label"></label>
                    @Html.DropDownListFor(model => model.DeptId, new SelectList(ViewBag.Departments, "DeptId", "DeptName"), "Select Company", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="DesigId" class="control-label"></label>
                    @Html.DropDownListFor(model => model.DesigId, new SelectList(ViewBag.Designations, "DesigId", "DesigName"), "Select Company", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="ShiftId" class="control-label"></label>
                    @Html.DropDownListFor(model => model.ShiftId, new SelectList(ViewBag.Shifts, "ShiftId", "ShiftName"), "Select Company", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>


@section Scripts{

}

