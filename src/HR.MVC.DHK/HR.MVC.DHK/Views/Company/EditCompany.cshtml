@model HR.MVC.DHK.Models.Company

@{
    ViewData["Title"] = "Edit Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Edit Company</h2>

    @using (Html.BeginForm("Edit", "Company", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="ComName">Company Name:</label>
            @Html.TextBoxFor(model => model.ComName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ComName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Basic">Basic:</label>
            @Html.TextBoxFor(model => model.Basic, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Basic, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Hrent">House Rent Allowance:</label>
            @Html.TextBoxFor(model => model.Hrent, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Hrent, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Medical">Medical Allowance:</label>
            @Html.TextBoxFor(model => model.Medical, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Medical, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="IsInactive">Is Inactive:</label>
            @Html.CheckBoxFor(model => model.IsInactive, new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.IsInactive, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Company")" class="btn btn-secondary">Cancel</a>
    }
</div>
